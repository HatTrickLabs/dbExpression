<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;netstandard2.1;netcoreapp3.1;net5.0</TargetFrameworks>
        <LangVersion>7.3</LangVersion>
        <IsPackable>true</IsPackable>
        <Company>HatTrick Labs, LLC</Company>
        <Authors>gwgrubbs,jerrod.eiman</Authors>
        <Description>
            dbExpression is a database connector that enables fluent composition and execution
            of type safe SQL queries directly from Microsoft .NET.  This package is an abstract
            package not meant for direct references.  Reference platform specific packages (i.e.
            HatTrick.DbEx.MsSql) to use dbExpression.
        </Description>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All"/>
    </ItemGroup>

</Project>
