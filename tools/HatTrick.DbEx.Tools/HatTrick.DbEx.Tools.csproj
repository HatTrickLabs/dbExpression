<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <Authors>Jerrod Eiman</Authors>
    <Company>Hat Trick Labs</Company>
    <Description>Database Expression code generation tools.</Description>
    <Copyright>Hat Trick Labs</Copyright>
    <PackageLicenseUrl>https://github.com/HatTrickLabs/db-ex/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/HatTrickLabs/db-ex</PackageProjectUrl>
    <RepositoryUrl>https://github.com/HatTrickLabs/db-ex</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>code-generation sql-query</PackageTags>
    <PackageReleaseNotes>update makeconfig to produce new format</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyName>dotnet-hattrick.dbex</AssemblyName>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dbex</ToolCommandName>
    <Version>1.0.3-beta</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\DbExConfig\DbExConfig.Example.json" />
    <None Remove="Resources\Templates\DataPackage.Template.txt" />
    <None Remove="Resources\Templates\EntityExpression.Template.txt" />
    <None Remove="Resources\Templates\EntityProvider.Template.txt" />
    <None Remove="Resources\Templates\Metadata.Template.txt" />
    <None Remove="Resources\Templates\SchemaExpression.Template.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\DbExConfig\DbExConfig.Example.json" />
    <EmbeddedResource Include="Resources\Templates\EntityProvider.Template.txt" />
    <EmbeddedResource Include="Resources\Templates\Metadata.Template.txt" />
    <EmbeddedResource Include="Resources\Templates\SchemaExpression.Template.txt" />
    <EmbeddedResource Include="Resources\Templates\DataPackage.Template.txt" />
    <EmbeddedResource Include="Resources\Templates\EntityExpression.Template.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HatTrick.Model.MsSql" Version="1.0.3" />
    <PackageReference Include="HatTrick.Text.Templating" Version="1.0.2" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2-beta1" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.6.0-preview3.19128.7" />
  </ItemGroup>

</Project>
