<MatCard>
    <MatCardContent>
        <div class="align-items-center">
            @if (RecordCount == 0)
            {
                <i class="fas fa-ban mr-4"></i><span class="font-weight-light">No records found.</span>
            }
            else if (!RecordCount.HasValue)
            {
                <i class="fas fa-circle-notch fa-spin mr-4"></i><span class="font-weight-light">Loading...</span>
            }
        </div>
    </MatCardContent>
</MatCard>

@code {

    [Parameter] public int? RecordCount { get; set; }

}