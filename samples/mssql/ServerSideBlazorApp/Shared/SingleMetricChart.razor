@if (Type == ChartType.Line)
{
    <LineChart @ref="lineChart" TItem="object" Options="@LineChartOptions" />
}
@if (Type == ChartType.Pie)
{
    <PieChart @ref="pieChart" TItem="object" Options="@PieChartOptions" />
}
@if (Type == ChartType.Bar)
{
    <BarChart @ref="barChart" TItem="object" Options="@BarChartOptions" />
}
@if (Type == ChartType.Doughnut)
{
    <DoughnutChart @ref="doughnutChart" TItem="object" />
}
@if (Type == ChartType.PolarArea)
{
    <PolarAreaChart @ref="polarAreaChart" TItem="object" />
}
