@page "/orders/{id}"
@inject OrderService OrderService
@inject NavigationManager NavigationManager
>
<Breadcrumb>
    <BreadcrumbItem>
        <BreadcrumbLink To="@ReturnUrl"><i class="fas fa-chevron-left"></i>&nbsp;Back</BreadcrumbLink>
    </BreadcrumbItem>
</Breadcrumb>

@if (Model is object)
{
    <Heading Size="HeadingSize.Is3">@Model.OrderNumber</Heading>
    <Divider></Divider>
    <Card>
        <CardBody>
            <OrderView Order="@Model" />
        </CardBody>
    </Card>
}
