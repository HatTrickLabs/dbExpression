ARG DOCKER_TAG

FROM mcr.microsoft.com/dotnet/framework/sdk:${DOCKER_TAG} AS unit_test_build

ADD https://github.com/ufoscout/docker-compose-wait/releases/download/2.5.0/wait /wait
RUN chmod +x /wait

CMD /wait && \
	dotnet test /db-ex/test/DbExpression.MsSql.Test.Integration/DbExpression.MsSql.Test.Integration.csproj --configuration ${BUILD_CONFIGURATION} --framework ${TARGET_FRAMEWORK_MONIKER} --logger "trx;LogFileName=/db-ex/test/DbExpression.MsSql.Test.Integration/TestResults/${TARGET_FRAMEWORK_MONIKER}.tests.trx" && \
	cp /db-ex/test/DbExpression.MsSql.Test.Integration/*.cobertura.xml /db-ex/test/DbExpression.MsSql.Test.Integration/TestResults