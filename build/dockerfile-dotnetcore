FROM mcr.microsoft.com/dotnet/sdk:6.0 AS unit_test_build

ENV PATH="$PATH:/root/.dotnet/tools"

# latest version of coverlet supported for .NET Core 3.1 is 1.7.2 (https://www.nuget.org/packages/coverlet.console)
RUN dotnet tool install --global coverlet.console

ADD https://github.com/ufoscout/docker-compose-wait/releases/download/2.5.0/wait /wait
RUN chmod +x /wait 

CMD /wait && /
dotnet test /src/test/HatTrick.DbEx.MsSql.Test.Database/HatTrick.DbEx.MsSql.Test.Database.csproj --configuration ${BUILD_CONFIGURATION} --logger "trx;LogFileName=/results/mssql-${MSSQL_VERSION}.tests.trx" /p:CollectCoverage=true /p:CoverletOutputFormat=cobertura && /
cp /src/test/HatTrick.DbEx.MsSql.Test.Database/*.cobertura.xml /results