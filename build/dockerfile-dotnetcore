FROM mcr.microsoft.com/dotnet/sdk:6.0 AS unit_test_build

ADD https://github.com/ufoscout/docker-compose-wait/releases/download/2.5.0/wait /wait
RUN chmod +x /wait 

CMD /wait && dotnet test /test/HatTrick.DbEx.MsSql.Test.Database/HatTrick.DbEx.MsSql.Test.Database.csproj --configuration ${BUILD_CONFIGURATION} --logger "trx;LogFileName=/results/mssql-${MSSQL_VERSION}.tests.trx" /p:CollectCoverage=true /p:CoverletOutputFormat=cobertura /p:Include="[HatTrick.DbEx.*Sql]*" /p:Exclude="[*Test]*" && cp /test/HatTrick.DbEx.MsSql.Test.Database/*.cobertura.xml /results